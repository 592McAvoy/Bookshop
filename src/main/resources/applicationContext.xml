<?xml version="1.0" encoding="UTF-8"?>
<!-- Spring Schema -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- DAO Bean -->
    <bean id="bookDao" class="bookshop.Dao.BookDao"> </bean>
    <bean id="orderDao" class="bookshop.Dao.OrderDao"> </bean>
    <bean id="salesDao" class="bookshop.Dao.SalesDao"> </bean>
    <bean id="userDao" class="bookshop.Dao.UserDao"> </bean>
    <bean id="userInfoDao" class="bookshop.Dao.UserInfoDao"> </bean>
    <bean id="cartDao" class="bookshop.Dao.CartDao"> </bean>

    <!-- Service Bean -->
    <bean id="bookService" class="bookshop.Service.BookService">
        <property name="dao" ref="bookDao"> </property>
    </bean>
    <bean id="userService" class="bookshop.Service.UserService">
        <property name="dao" ref="userDao"> </property>
    </bean>
    <bean id="userInfoService" class="bookshop.Service.UserInfoService">
        <property name="dao" ref="userInfoDao"> </property>
    </bean>
    <bean id="cartService" class="bookshop.Service.CartService">
        <property name="bookDao" ref="bookDao"> </property>
        <property name="cartDao" ref="cartDao"> </property>
    </bean>
    <bean id="orderService" class="bookshop.Service.OrderService">
        <property name="orderDao" ref="orderDao"> </property>
    </bean>
    <bean id="salesService" class="bookshop.Service.SalesService">
        <property name="dao" ref="salesDao"> </property>
    </bean>




</beans>